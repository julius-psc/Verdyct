{
    "name": "verdyct-monorepo",
    "version": "1.0.0",
    "description": "Configuration racine pour les commandes client et server.",
    "main": "server/main.py",
    "scripts": {
        "start:client": "cd client && npm start",
        "start:server": "cd server && source .venv/bin/activate && uvicorn main:app --reload",
        "dev": "concurrently \"npm run start:client\" \"npm run start:server\"",
        "install:server": "cd server && python3 -m venv .venv && source .venv/bin/activate && pip install -r requirements.txt",
        "install:client": "cd client && npm install"
    },
    "keywords": [
        "fastapi",
        "react",
        "monorepo"
    ],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}